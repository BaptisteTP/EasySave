<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="EasySave2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Easy Save" Height="720" Width="1280" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <Image Source="logo.png" Width="50" Height="50" HorizontalAlignment="Center"/>
            <TextBlock Text="Easy Save" FontSize="24" FontWeight="Bold" Margin="0,10,0,10" TextAlignment="Center"/>
            <TextBlock Text="Les logs en temps r�el sont actuellement stock�es dans le dossier suivant :" TextAlignment="Center"/>
            <TextBox Name="LogFolderPath" Width="350" Height="30" IsReadOnly="True" Background="LightGray" Margin="0,5,0,10"/>
            <Button Content="Changer de dossier de stockage" Width="250" Height="30" Margin="0,0,0,10"/>
            <TextBlock Text="Logs en JSON ou XML ?" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
                <Button Content="JSON" Width="80" Height="30" Margin="5,0,5,0"/>
                <Button Content="XML" Width="80" Height="30" Margin="5,0,5,0"/>
            </StackPanel>
            <Button Content="Suivant !" Width="100" Height="30" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>