<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="EasySave2._0.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Easy Save" Height="720" Width="1280"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

	<Grid>
		<Canvas>
			<StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="1280" Height="704">
				<Image Source="assets/images/EasySaveLogo.png" Width="502" Height="134" HorizontalAlignment="Center" Margin="0,130,0,0"/>
				<TextBlock Text="Les logs en temps réel sont actuellement stockées dans le dossier suivant :" FontSize="24" TextAlignment="Center"/>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
					<TextBox Name="LogFolderPath" Width="600" Height="50" FontSize="18" Background="White" Margin="0,0,20,0"/>
					<Button Content="..." Width="60" Height="50" FontSize="18" Click="BrowseFolder_Click" Cursor="Hand"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
					<TextBlock Text="Logs en JSON ou XML : " FontSize="24" VerticalAlignment="Center" Margin="0,0,20,0"/>
					<RadioButton Content="JSON" GroupName="LogFormat" Width="120" Height="24" FontSize="18" Margin="10,0,10,0" Cursor="Hand"/>
					<RadioButton Content="XML" GroupName="LogFormat" Width="120" Height="24" FontSize="18" Margin="10,0,10,0" Cursor="Hand"/>
				</StackPanel>
				<Button Content="Suivant ->" Style="{StaticResource NextButton}" Width="200" Height="50" Cursor="Hand"
                        FontWeight="Bold" FontSize="22" HorizontalAlignment="Center" Click="NextButton_Click" Margin="0,55,0,0"/>
			</StackPanel>
		</Canvas>
	</Grid>
</Window>