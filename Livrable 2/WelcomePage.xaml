<Window x:Class="EasySave2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave2._0"
        mc:Ignorable="d"
        Title="StartPage" Height="720" Width="1280" Background="White">
    <Grid>
        <ContentControl ContentTemplate="{StaticResource EasySaveLogo1}" />

        <TextBlock x:Name="WelcomeText"
           Text="Bienvenue sur Easy Save, choisissez votre langue :"
           HorizontalAlignment="Center" VerticalAlignment="Center"
           FontSize="24" FontWeight="SemiBold" Margin="0,0,0,0"/>

        <Button x:Name="FrenchButton" Width="149" Height="99" Margin="0,250,300,0" Click="FrenchButton_Click">
            <Image Source="assets/images/FrenchButton.png"/>
        </Button>

        <Button x:Name="EnglishButton" Width="189" Height="99" Margin="300,250,0,0" Click="EnglishButton_Click">
            <Image Source="assets/images/EnglishButton.png"/>
        </Button>

        <Button x:Name="NextButton" Style="{StaticResource NextButton}" Click="NextButton_Click">
            <TextBlock Text="Suivant ->" FontSize="22" FontWeight="Bold"/>
        </Button>
    </Grid>
</Window>