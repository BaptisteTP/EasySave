<Window x:Class="EasySave2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave2._0"
        mc:Ignorable="d"
        Title="StartPage" Height="720" Width="1280" Background="White">
    <Grid>
        <ContentControl ContentTemplate="{StaticResource EasySaveLogo1}" Margin="0,120,0,0"/>

        <TextBlock x:Name="WelcomeText" Text="Bienvenue sur Easy Save, choisissez votre langue :" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,60"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,160,0,0">
            <Button x:Name="FrenchButton" Style="{StaticResource NoHighlightButton}" Width="149" Height="99" Margin="40,0,0,0">
                <Image Source="assets/images/FrenchButton.png"/>
            </Button>

            <Button x:Name="EnglishButton" Style="{StaticResource NoHighlightButton}" Width="189" Height="99" Margin="80,0,0,0">
                <Image Source="assets/images/EnglishButton.png"/>
            </Button>
        </StackPanel>

        <Button x:Name="NextButton" Style="{StaticResource NextButton}" Margin="0,0,0,100" VerticalAlignment="Bottom">
            <TextBlock Text="Suivant ->" FontSize="22" FontWeight="Bold"/>
        </Button>
    </Grid>
</Window>