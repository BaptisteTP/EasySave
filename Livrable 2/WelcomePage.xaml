<Page x:Class="EasySave2._0.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">
    <Grid>
        <ContentControl ContentTemplate="{StaticResource EasySaveLogo1}" />

        <TextBlock x:Name="WelcomeText"
   Text="Bienvenue sur Easy Save, choisissez votre langue :"
   HorizontalAlignment="Center" VerticalAlignment="Center"
   FontSize="24" FontWeight="SemiBold" Margin="0,0,0,0"/>

        <Button x:Name="FrenchButton" Width="149" Height="99" Margin="0,250,300,0" Cursor="Hand">
            <Image Source="assets/images/FrenchButton.png"/>
        </Button>

        <Button x:Name="EnglishButton" Width="189" Height="99" Margin="300,250,0,0" Cursor="Hand">
            <Image Source="assets/images/EnglishButton.png"/>
        </Button>

        <Button x:Name="NextButton" Style="{StaticResource NextButton}" Margin="0,550,0,0" Click="NextButton_Click" Cursor="Hand">
            <TextBlock Text="Suivant ->" FontSize="22" FontWeight="Bold"/>
        </Button>
    </Grid>
</Page>
