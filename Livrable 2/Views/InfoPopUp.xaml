<UserControl x:Class="EasySave2._0.InfoPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="900">
	<Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10">
		<StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Nom de la sauvegarde :" FontSize="16" TextAlignment="Center" Width="431"/>
				<TextBlock Text="" FontSize="16" TextAlignment="Center" Width="452"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Chemin source :" FontSize="16" TextAlignment="Center" Width="431"/>
				<TextBlock Text="" FontSize="16" TextAlignment="Center" Width="452"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Chemin destination :" FontSize="16" TextAlignment="Center" Width="431"/>
				<TextBlock Text="" FontSize="16" TextAlignment="Center" Width="452"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Crypter la sauvegarde :" FontSize="16" TextAlignment="Center" Width="431"/>
				<TextBlock Text="" FontSize="16" TextAlignment="Center" Width="452"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Nombre de fichier dans le dossier source :" FontSize="16" TextAlignment="Center" Width="431"/>
				<TextBlock Text="" FontSize="16" TextAlignment="Center" Width="452"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Taille du dossier :" FontSize="16" TextAlignment="Center" Width="431"/>
				<TextBlock Text="" FontSize="16" TextAlignment="Center" Width="452"/>
			</StackPanel>

			<Button Content="Fermer" Click="Fermer_Click" HorizontalAlignment="Center"/>
		</StackPanel>
	</Border>
</UserControl>