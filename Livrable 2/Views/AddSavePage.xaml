<Page x:Class="EasySave2._0.AddSavePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave2._0"
      xmlns:viewmodels="clr-namespace:EasySave2._0.ViewModels"
      mc:Ignorable="d" 
      Title="AddSavePage" Height="720" Width="1280" Background="#fff">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="20" Height="20" CornerRadius="10"
                            BorderBrush="Black" BorderThickness="2"
                            Background="White">
                                <Ellipse Width="10" Height="10" Fill="Black"
                                 Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Border>
                            <ContentPresenter Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ErrorTemplate" TargetType="TextBox">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel>
                            <TextBlock Text="{Binding [0].ErrorContent}" DockPanel.Dock="Bottom" Foreground="Red"/>
                            <Border BorderBrush="Red" BorderThickness="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Page.DataContext>
        <viewmodels:AddSaveViewModel/>
    </Page.DataContext>

    <Grid>
        <ContentControl ContentTemplate="{StaticResource EasySaveLogo2}"/>

        <StackPanel Margin="100,150,0,0">
            <TextBlock Text="Ajouter une nouvelle sauvegarde :" FontWeight="Bold" FontSize="20" Margin="0,20,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                <TextBlock Text="Nom :" FontWeight="Bold" FontSize="20"/>
                <TextBox Name="txtNom" Width="459" Style="{StaticResource ErrorTemplate}" Margin="10,0,0,0" FontSize="20" Text="{Binding SaveToAdd.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                <TextBlock Text="Type :" FontWeight="Bold" FontSize="20"/>
                <RadioButton Content="Complete" FontSize="20" FontWeight="Bold" GroupName="Type" IsChecked="True" Margin="15,2,0,0" Cursor="Hand"/>
                <RadioButton Content="Incrementielle" FontSize="20" FontWeight="Bold" GroupName="Type" Margin="15,2,0,0" Cursor="Hand"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                <TextBlock Text="Source :" Margin="0,10,0,0" FontSize="20" FontWeight="Bold"/>
                <TextBox Name="SourceFolderBox" Style="{StaticResource ErrorTemplate}" Width="606" FontSize="20" Margin="10,0,0,0" Text="{Binding SaveToAdd.SourcePath, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"></TextBox>
                    <Button Content="..." Width="60" Height="50" FontSize="18" Click="SourceFolder_click" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                <TextBlock Text="Destination :" FontSize="20" Margin="0,10,0,0" FontWeight="Bold"/>
                <TextBox Name="DestinationFolderBox" Style="{StaticResource ErrorTemplate}" FontSize="20" Width="557" Margin="10,0,0,0" Text="{Binding SaveToAdd.DestinationPath, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                <Button Content="..." Width="60" Height="50" FontSize="18" Click="DestinationFolder_Click" Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                <TextBlock Text="Chiffrage :" FontWeight="Bold" FontSize="20"/>
                <CheckBox Name="ChifrageBox" Content="Chiffrer la sauvegarde" FontSize="20" FontWeight="Bold" Margin="15,0,0,0" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,100" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="✔ Sauvegarder" Background="Green" Foreground="White" Width="210" 
            Margin="0,0,0,0" Height="46" FontSize="20" FontWeight="Bold" Cursor="Hand" Command="{Binding SaveCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="20">
                            <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <Button x:Name="OptionButton" Style="{StaticResource OptionButton}" Cursor="Hand" HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" Margin="0,0,100,100" Click="OptionButton_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Option" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,0,0" Height="37"/>
                <Image Source="../assets/images/Option.png" Width="24" Height="24" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Button Content="✖ Annuler" Background="Red" Foreground="White" Width="178" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                    Margin="100,0,0,100" Height="45" Cursor="Hand" Click="CancelButton_Click" FontWeight="Bold" FontSize="20">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="20">
                        <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Page>
