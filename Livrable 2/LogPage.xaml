<Page x:Class="EasySave2._0.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White" Cursor="">
    <Grid Cursor="">
        <ContentControl ContentTemplate="{StaticResource EasySaveLogo1}" />
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="1280" Height="704">
            <TextBlock Text="Les logs en temps réel sont actuellement stockées dans le dossier suivant :" FontSize="24" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                <TextBox Name="LogFolderPath" Width="600" Height="50" FontSize="18" Background="White" Margin="0,0,20,0"/>
                <Button Content="..." Width="60" Height="50" FontSize="18" Cursor="Hand"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                <TextBlock Text="Logs en JSON ou XML : " FontSize="24" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <RadioButton Content="JSON" GroupName="LogFormat" Width="120" Height="24" FontSize="18" Cursor="Hand"/>
                <RadioButton Content="XML" GroupName="LogFormat" Width="120" Height="24" FontSize="18" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
        <Button x:Name="NextButton" Style="{StaticResource NextButton}" Margin="0,550,0,0" Click="NextButton_Click" Cursor="Hand">
            <TextBlock Text="Suivant ->" FontSize="22" FontWeight="Bold"/>
        </Button>
    </Grid>
</Page>
