<Page x:Class="EasySave2._0.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:EasySave2._0"
      xmlns:usercontrols="clr-namespace:EasySave2._0.Usercontrols"
      xmlns:viewmodels="clr-namespace:EasySave2._0.ViewModels"
      xmlns:valueconverters="clr-namespace:EasySave2._0.ValueConverters"
      xmlns:enums="clr-namespace:EasySave2._0.Enums"
      mc:Ignorable="d"
      Title="SettingPage"
      Background="#fff"
      d:Width="1080"
      d:Height="720">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <valueconverters:LogTypeToSelectedBool x:Key="LogTypeToSelectedBool" />
        <Style TargetType="RadioButton">
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Foreground"
                    Value="Black" />
            <Setter Property="Margin"
                    Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Border Width="20"
                                    Height="20"
                                    CornerRadius="10"
                                    BorderBrush="Black"
                                    BorderThickness="2"
                                    Background="White">
                                <Ellipse Width="10"
                                         Height="10"
                                         Fill="#FF007FCA"
                                         Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </Border>
                            <ContentPresenter Margin="5,0,0,0"
                                              VerticalAlignment="Center" />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ErrorTemplate"
               TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel>
                            <Border Padding="{TemplateBinding Padding}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                <ScrollViewer x:Name="PART_ContentHost" />
                            </Border>
                            <ItemsControl Margin="0 5 0 0"
                                          FontSize="12"
                                          ItemsSource="{TemplateBinding Validation.Errors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="Red"
                                                   Text="{Binding ErrorContent}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <AdornedElementPlaceholder />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BorderStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="WhiteSmoke" />
            <Setter Property="Padding"
                    Value="24" />
            <Setter Property="Margin"
                    Value="16" />
            <Setter Property="CornerRadius"
                    Value="8" />
            <Setter Property="MinHeight"
                    Value="500" />
            <Setter Property="MaxWidth"
                    Value="800" />
        </Style>
    </Page.Resources>

    <Page.DataContext>
        <viewmodels:SettingsViewModel />
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0"
                        ContentTemplate="{StaticResource EasySaveLogo2}" />

        <TextBlock Grid.Row="1"
                   Text="{DynamicResource SettingText}"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="32 0 0 0" />

        <ScrollViewer Grid.Row="2"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

            <WrapPanel Margin="16 0 0 0"
                       Orientation="Horizontal"
                       VerticalAlignment="Center">

                <Border Style="{StaticResource BorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto " />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="General"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 8" />

                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    Margin="4 0 0 0">
                            <TextBlock FontSize="24"
                                       Text="{DynamicResource ChooseLanguage}"
                                       Height="50"
                                       Margin="0,0,24,0" />
                            <usercontrols:LanguageControl x:Name="LanguageSelector"
                                                          ItemsSource="{Binding LanguageItems}"
                                                          SelectedLanguage="{Binding SelectedLanguage}" />
                        </StackPanel>

                        <StackPanel Grid.Row="2"
                                    Margin="4 20 0 0">
                            <TextBlock FontSize="20"
                                       TextWrapping="Wrap"
                                       Text="{DynamicResource EditPathRealTimeLog}" />
                            <Grid Margin="0 8 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Style="{StaticResource ErrorTemplate}"
                                         Text="{Binding RealTimeLogPath, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         Height="50"
                                         HorizontalAlignment="Stretch"
                                         FontSize="18"
                                         Background="White"
                                         Margin="0 0 4 0" />
                                <Button Grid.Column="1"
                                        VerticalAlignment="Top"
                                        Content="..."
                                        Width="60"
                                        Height="28"
                                        FontSize="18"
                                        Cursor="Hand"
                                        Command="{Binding ChangedLogPathCommand}"
                                        CommandParameter="realtime" />
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Row="3"
                                    Margin="0 20 0 0">
                            <TextBlock FontSize="20"
                                       TextWrapping="Wrap"
                                       Text="{DynamicResource EditPathDailyLog}" />
                            <Grid Margin="0 8 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Style="{StaticResource ErrorTemplate}"
                                         Text="{Binding DailyLogPath, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Stretch"
                                         Height="50"
                                         FontSize="18"
                                         Background="White"
                                         Margin="0 0 4 0" />

                                <Button Grid.Column="1"
                                        Content="..."
                                        Width="60"
                                        VerticalAlignment="Top"
                                        Height="28"
                                        FontSize="18"
                                        Cursor="Hand"
                                        Command="{Binding ChangedLogPathCommand}"
                                        CommandParameter="daily" />
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Row="4"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0 20 0 0">
                            <TextBlock Text="{DynamicResource ChoiceLogFormat}"
                                       FontSize="24" />
                            <RadioButton Content="{DynamicResource Json}"
                                         GroupName="LogFormat"
                                         Margin="10 0 0 100"
                                         IsChecked="{Binding SelectedLogType, Mode=TwoWay, Converter={StaticResource LogTypeToSelectedBool}, ConverterParameter={x:Static enums:LogType.json}}"
                                         Cursor="Hand" />
                            <RadioButton Content="{DynamicResource Xml}"
                                         GroupName="LogFormat"
                                         Margin="10 0 0 100"
                                         IsChecked="{Binding SelectedLogType, Mode=TwoWay, Converter={StaticResource LogTypeToSelectedBool}, ConverterParameter={x:Static enums:LogType.xml}}"
                                         Cursor="Hand" />
                        </StackPanel>
                        <StackPanel Grid.Row="4"
                                    Margin="0 80 0 0">
                            <TextBlock FontSize="20"
                                       TextWrapping="Wrap"
                                       Text="{DynamicResource KoBlockLimit}" />
                            <Grid Margin="0 0 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Style="{StaticResource ErrorTemplate}"
                                         Text="{Binding FileSizeLimit, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Stretch"
                                         Height="50"
                                         FontSize="18"
                                         Background="White"
                                         Margin="0 0 4 0" 
                                         MaxLength="9"/>
                            </Grid>
                        </StackPanel>

                    </Grid>
                </Border>

                <Border Style="{StaticResource BorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="{DynamicResource BusinessSoftware}"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 8" />

                        <TextBlock Grid.Row="1" Foreground="Red"
                                   Text="{DynamicResource NoBusinessSoftware}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding BuisnessSoftwaresInterrupt.Count}"
                                                     Value="0">
                                            <Setter Property="Visibility"
                                                    Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding BuisnessSoftwaresInterrupt}"
                                      MaxHeight="400"
                                      HorizontalAlignment="Stretch">
                            <ItemsControl.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </ControlTemplate>
                            </ItemsControl.Template>
                            <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding BuisnessSoftwaresInterrupt.Count}"
                                                     Value="0">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.Style>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="3"
                                            Background="LightGray"
                                            Margin="4">
                                        <Grid>
                                            <TextBlock Text="{Binding}"
                                                       HorizontalAlignment="Left"
                                                       Padding="4" />

                                            <Button HorizontalAlignment="Right"
                                                    Margin="4"
                                                    Cursor="Hand"
                                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.DeleteBuisnessSoftwareCommand}"
                                                    CommandParameter="{Binding}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid Background="Transparent">
                                                            <Viewbox Width="15"
                                                                     Height="15">
                                                                <Path x:Name="Path"
                                                                      Stretch="Fill"
                                                                      Fill="DarkSlateGray"
                                                                      Data="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z" />
                                                            </Viewbox>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Grid.Row="2"
                                    Margin="0 8 0 0">
                            <TextBox Text="{Binding BuisnessSoftwareToAdd}"
                                     Margin="5 0" />
                            <Button Content="Ajouter"
                                    Margin="5,0"
                                    Command="{Binding AddBuisnessSoftwareCommand}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </WrapPanel>
        </ScrollViewer>

        <Button Grid.Row="3"
                Width="170"
                Height="44"
                Content="{DynamicResource ValidEnd}"
                FontSize="24"
                FontWeight="Bold"
                Style="{StaticResource GreenButtonStyle}"
                BorderThickness="2"
                Command="{Binding ConfirmSettingsCommand}"
                Cursor="Hand"
                HorizontalAlignment="Left"
                Margin="20">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Page>
