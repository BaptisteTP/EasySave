<Page x:Class="EasySave2._0.EncryptPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave2._0"
      mc:Ignorable="d" 
      Title="EncryptPage" Background="#fff">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" 
                        ContentTemplate="{StaticResource EasySaveLogo2}" 
                        VerticalAlignment="Top" 
                        Margin="0,20,0,0"/>

        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Margin="20">
            <TextBlock Text="{DynamicResource FileToDecrypt}" 
                       FontWeight="Bold" 
                       FontSize="24" 
                       TextAlignment="Center" 
                       Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,30">
                <TextBox Name="EncryptPath" 
                         Width="Auto" 
                         MinWidth="300" 
                         MaxWidth="600" 
                         Height="50" 
                         FontSize="30" 
                         Background="White" 
                         Margin="0,0,20,0"/>
                <Button Content="..." 
                        Width="60" 
                        Height="50" 
                        FontSize="18" 
                        Cursor="Hand" 
                        Click="BrowseButton_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,30">
                <TextBlock Text="{DynamicResource DecryptKey}" 
                           FontWeight="Bold" 
                           FontSize="24" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <TextBox Name="Key" 
                         Text="{Binding Key}" 
                         Width="Auto" 
                         MinWidth="200" 
                         MaxWidth="300" 
                         Height="50" 
                         FontSize="30" 
                         Background="White"/>
            </StackPanel>

            <Button Width="170" 
                    Height="44" 
                    Content="{DynamicResource Decrypt}" 
                    FontSize="24" 
                    FontWeight="Bold" 
                    Style="{StaticResource BlueButtonStyle}" 
                    BorderThickness="2" 
                    Cursor="Hand" 
                    Click="Decrypt"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" 
                    Content="{DynamicResource Cancel}" 
                    Style="{StaticResource RedButtonStyle}" 
                    Width="178" 
                    Height="45" 
                    Cursor="Hand" 
                    Click="CancelButton_Click" 
                    FontWeight="Bold" 
                    FontSize="20" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,20,0"/>
            <TextBlock Grid.Column="1" 
                       Name="DecryptionMessage" 
                       FontWeight="Bold" 
                       FontSize="24" 
                       Foreground="Green" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
