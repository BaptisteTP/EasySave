<Page x:Class="EasySave2._0.PasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave2._0"
      mc:Ignorable="d" 
      Title="PasswordPage" Background="#fff">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" ContentTemplate="{StaticResource EasySaveLogo2}" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Margin="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="{DynamicResource mdp}" FontWeight="Bold" FontSize="30" VerticalAlignment="Center"/>
                <PasswordBox Name="mdp" Width="Auto" MinWidth="300" MaxWidth="600" FontSize="24" Background="White" Margin="20,0,0,0" PasswordChanged="OnPasswordChanged" KeyDown="OnPasswordKeyDown"/>
            </StackPanel>
            <TextBlock Name="ErrorMessage" Text="" Foreground="Red" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,10"/>
            <Button Width="170" Height="44" Content="{DynamicResource Validate}" FontSize="24"
                    FontWeight="Bold" Style="{StaticResource GreenButtonStyle}" BorderThickness="2" Click="ValidatePassword" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <Button Grid.Row="2" Content="{DynamicResource Cancel}" Style="{StaticResource RedButtonStyle}" Width="178" Height="45"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" Cursor="Hand" Click="CancelButton_Click" FontWeight="Bold" FontSize="20">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="20">
                        <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Page>
